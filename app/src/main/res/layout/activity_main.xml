<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4cccc"
    android:padding="10sp">

    <ImageButton
        android:id="@+id/imageButtonSpeak"
        android:layout_width="401dp"
        android:layout_height="405dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:adjustViewBounds="false"
        android:background="#f4cccc"
        android:contentDescription="@string/tap_on_mic"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/mic" />

    <TextView
        android:id="@+id/textViewShow"
        android:layout_width="247dp"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/textViewtapto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="118dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textViewtapto"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonSpeak"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="100dp"
        android:background="#f4cccc"
        android:fontFamily="sans-serif"
        android:text="@string/tap"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="402dp"
        android:layout_height="129dp"
        android:layout_below="@+id/imageButtonSpeak"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="92dp"
        android:background="?android:attr/listDivider"

        />

</RelativeLayout>


